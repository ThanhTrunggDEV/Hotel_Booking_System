<Window x:Class="Hotel_Booking_System.Views.PaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thanh toán"
        Height="500" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border CornerRadius="24"
            Background="White"
            Padding="0"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="#33000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="24,24,0,0" Height="100">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF26A69A" Offset="0"/>
                        <GradientStop Color="#FF66BB6A" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="30,0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="White" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Thanh toán an toàn" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Vui lòng kiểm tra thông tin trước khi xác nhận giao dịch." FontSize="12" Foreground="#E8F5E9"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#33FFFFFF" Padding="10,6" CornerRadius="18">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Tổng cộng" Foreground="#E8F5E9" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding TotalPayment, StringFormat='${0:F0}'}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="30,25">
                <Border Background="#F8FBF8" CornerRadius="14" Padding="16" BorderBrush="#E0F2F1" BorderThickness="1" Margin="0,0,0,18">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="22" Foreground="#26A69A" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Chi tiết thanh toán" FontSize="14" FontWeight="SemiBold" Foreground="#2F4F4F"/>
                            <TextBlock Text="Chọn phương thức thanh toán để tiếp tục." FontSize="12" Foreground="#607D8B" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Phương thức thanh toán" FontSize="12" Foreground="#607D8B" Margin="0,0,0,8"/>
                    <Border Background="#FFFFFF" CornerRadius="10" BorderBrush="#CFD8DC" BorderThickness="1">
                        <ComboBox SelectedValue="{Binding Method}"
                                  SelectedValuePath="Tag"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Padding="12"
                                  Height="46"
                                  HorizontalContentAlignment="Stretch"
                                  VerticalContentAlignment="Center">
                            <ComboBoxItem Tag="Cash">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                    <TextBlock Text="Tiền mặt"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="Credit Card">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                    <TextBlock Text="Thẻ tín dụng"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem Tag="Bank Transfer">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                    <TextBlock Text="Chuyển khoản"/>
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>
                    </Border>
                </StackPanel>

                <Border Background="#FFF3E0" CornerRadius="12" Padding="14" BorderBrush="#FFE0B2" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="#FB8C00" Margin="0,0,10,0"/>
                        <TextBlock Text="Xác nhận thanh toán là cuối cùng. Hãy đảm bảo thông tin đặt phòng chính xác trước khi gửi." Foreground="#FB8C00" FontSize="12" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,30,30">
                <Button Content="Hủy" Width="100" Height="38"
                        x:Name="btnCancel"
                        Background="White"
                        Foreground="#455A64"
                        BorderBrush="#CFD8DC"
                        BorderThickness="1"
                        FontWeight="SemiBold"
                        Margin="0,0,12,0"/>
                <Button Content="Thanh toán" Width="120" Height="38"
                        x:Name="btnPay"
                        Command="{Binding ConfirmPaymentCommand}"
                        Background="#26A69A"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="{x:Null}"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#3326A69A"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
