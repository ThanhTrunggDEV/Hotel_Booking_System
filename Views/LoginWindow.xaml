<Window x:Class="Hotel_Booking_System.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Booking_System.Views"
        mc:Ignorable="d"
        Title="Đăng Nhập - NTT Hotel" 
        Height="750" 
        Width="1200" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent">


    <Grid>
        <Border Background="{StaticResource PrimaryGradient}">
            <Grid>
                <Grid>
                    <StackPanel VerticalAlignment="Top" 
                                HorizontalAlignment="Center" 
                                Margin="0,60,0,0">

                    </StackPanel>
                    <Border Width="450" 
                            Background="White" 
                            CornerRadius="25"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                            Direction="270" 
                                            ShadowDepth="20" 
                                            Opacity="0.3" 
                                            BlurRadius="40"/>
                        </Border.Effect>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="50,50,50,50">
           
                                <TextBlock Text="Đăng Nhập" 
                                           FontSize="28" 
                                           FontWeight="Bold" 
                                           Foreground="#2C3E50" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Chào mừng bạn trở lại!"
                                           FontSize="15"
                                           Foreground="#7F8C8D"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,40"/>

                                <TextBlock Text="{Binding NotificationMessage}"
                                           Foreground="Red"
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"/>

                                <TextBlock Text="Email" 
                                           Foreground="#2C3E50" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,8"/>
                                <TextBox Style="{StaticResource ModernTextBox}" 
                                         Margin="0,0,0,20"
                                         Name="txtEmail"
                                         Text="{Binding Email}"
                                         />

                                <TextBlock Text="Mật khẩu" 
                                           Foreground="#2C3E50" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,8"/>
                                <PasswordBox Style="{StaticResource ModernPasswordBox}" 
                                             Margin="0,0,0,25"
                                             Name="txtPassword"/>

                                <Grid Margin="0,0,0,35">
                                    <CheckBox Content="Ghi nhớ đăng nhập" 
                                              Style="{StaticResource ModernCheckBox}"
                                              IsChecked="{Binding IsSavedCredentials}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                                    <Button Command="{Binding ForgotPasswordCommand}"
                                            Content="Quên mật khẩu?" 
                                            Style="{StaticResource LinkButton}"
                                            HorizontalAlignment="Right"/>
                                </Grid>

                                <Button Content="ĐĂNG NHẬP"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding LoginCommand}"
                                        CommandParameter="{Binding ElementName=txtEmail, Path=Text}"
                                        Margin="0,0,0,30"/>

                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="Chưa có tài khoản? " 
                                               Foreground="#7F8C8D" 
                                               FontSize="13" 
                                               VerticalAlignment="Center"/>
                                    <Button Command="{Binding SignUpCommand}"
                                            Content="Đăng ký ngay" 
                                            Style="{StaticResource LinkButton}"
                                            Foreground="#667eea"
                                            FontWeight="SemiBold"
                                            FontSize="13"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
