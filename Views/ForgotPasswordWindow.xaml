<Window x:Class="Hotel_Booking_System.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Booking_System.Views"
        mc:Ignorable="d"
        Title="Quên Mật Khẩu - NTT Hotel"
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent">

    
    <Window.Resources>
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f093fb" Offset="0"/>
            <GradientStop Color="#f5576c" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="27.5"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="10" 
                                                        Opacity="0.5" 
                                                        BlurRadius="20"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="5" 
                                                        Opacity="0.3" 
                                                        BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#667eea"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#667eea"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#10667eea"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="5" 
                                                        Opacity="0.3" 
                                                        BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="27.5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="25,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="3" 
                                                        Opacity="0.2" 
                                                        BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="27.5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="25,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="3" 
                                                        Opacity="0.2" 
                                                        BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#667eea"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#764ba2"/>
                                <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Width="22" Height="22" 
                                    Background="Transparent" 
                                    BorderBrush="#667eea" 
                                    BorderThickness="2" 
                                    CornerRadius="5">
                                <TextBlock x:Name="CheckMark" 
                                          Text="✓" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Foreground="#667eea"
                                          Visibility="Collapsed"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                              Margin="12,0,0,0" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#764ba2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource PrimaryGradient}">
            <Grid>
                <Grid>
                    <StackPanel VerticalAlignment="Top" 
                                HorizontalAlignment="Center" 
                                Margin="0,60,0,0">
                    </StackPanel>

                    <Border Width="450" 
                            Background="White" 
                            CornerRadius="25"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                            Direction="270" 
                                            ShadowDepth="20" 
                                            Opacity="0.3" 
                                            BlurRadius="40"/>
                        </Border.Effect>
                        
                        
                            <Grid Margin="50,50,50,50">

                                <StackPanel x:Name="pnStep1" Visibility="{Binding StepOneStatus}">
                                    <TextBlock Text="Quên Mật Khẩu" 
                                               FontSize="28" 
                                               FontWeight="Bold" 
                                               Foreground="#2C3E50" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,10"/>

                                    <TextBlock Text="Nhập email để nhận mã OTP" 
                                               FontSize="15" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center" 
                                               TextAlignment="Center"
                                               Margin="0,0,0,40"/>

                                    <TextBlock Text="Email" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,30"
                                             x:Name="txtEmail"
                                             />

                                    <Button Content="GỬI MÃ OTP" 
                                             Style="{StaticResource PrimaryButton}"
                                             Margin="0,0,0,20"
                                             Command="{Binding SendOTPCommand}"
                                             CommandParameter="{Binding ElementName=txtEmail, Path=Text}"/>

                                    <Button Content="Quay lại đăng nhập" 
                                             Style="{StaticResource SecondaryButton}"
                                             Margin="0,0,0,30"
                                             Command="{Binding BackToLoginCommand}"/>

                                    <Border Background="#F8F9FA" 
                                            CornerRadius="15" 
                                            Padding="20,15"
                                            Margin="0,0,0,20">
                                        <StackPanel>
                                            <TextBlock Text="ℹ️ Lưu ý" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#2C3E50"
                                                       Margin="0,0,0,8"/>
                                            <TextBlock Text="• Mã OTP sẽ được gửi đến email của bạn" 
                                                       FontSize="12" 
                                                       Foreground="#7F8C8D"
                                                       TextWrapping="Wrap"
                                                       LineHeight="18"/>
                                            <TextBlock Text="• Mã có hiệu lực trong 5 phút" 
                                                       FontSize="12" 
                                                       Foreground="#7F8C8D"
                                                       TextWrapping="Wrap"
                                                       LineHeight="18"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <StackPanel x:Name="Step2Panel" Visibility="{Binding StepTwoStatus}">
                                    <TextBlock Text="Nhập Mã OTP" 
                                               FontSize="28" 
                                               FontWeight="Bold" 
                                               Foreground="#2C3E50" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,10"/>

                                    <TextBlock Text="Nhập mã 6 số đã được gửi đến email của bạn" 
                                               FontSize="15" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center" 
                                               TextAlignment="Center"
                                               Margin="0,0,0,40"/>

                                    

                                    
                                    <TextBlock Text="Mã OTP" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,30"
                                             MaxLength="6"
                                             x:Name="txtOTP"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             TextAlignment="Center"/>

                                    <Button Content="XÁC NHẬN OTP" 
                                             Style="{StaticResource PrimaryButton}"
                                             Command="{Binding ConfirmOTPCommand}"
                                             CommandParameter="{Binding ElementName=txtOTP, Path=Text}"
                                             Margin="0,0,0,20"
                                             />

                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center" 
                                                Margin="0,0,0,30">
                                        <TextBlock Text="Chưa nhận được mã? " 
                                                   Foreground="#7F8C8D" 
                                                   FontSize="13" 
                                                   VerticalAlignment="Center"/>
                                        <Button Content="Gửi lại" 
                                                 Command="{Binding SendOTPCommand}"
                                                 CommandParameter="{Binding ElementName=txtEmail, Path=Text}"
                                                 Style="{StaticResource LinkButton}"
                                                 FontWeight="SemiBold"
                                                 />
                                    </StackPanel>

                                    <Button Content="Quay lại"
                                             Style="{StaticResource SecondaryButton}"
                                             Margin="0,0,0,30"
                                             Command="{Binding PreviousStepCommand}"/>
                                </StackPanel>

                                
                                <StackPanel x:Name="Step3Panel" Visibility="{Binding StepThreeStatus}">
                                    <TextBlock Text="Đặt Lại Mật Khẩu" 
                                               FontSize="28" 
                                               FontWeight="Bold" 
                                               Foreground="#2C3E50" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,10"/>

                                    <TextBlock Text="Nhập mật khẩu mới cho tài khoản" 
                                               FontSize="15" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center" 
                                               TextAlignment="Center"
                                               Margin="0,0,0,40"/>

                                    <TextBlock Text="Mật khẩu mới" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <PasswordBox Style="{StaticResource ModernPasswordBox}" 
                                                 Margin="0,0,0,20"
                                                 Name="txtPassword"/>

                                    <TextBlock Text="Xác nhận mật khẩu" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <PasswordBox Style="{StaticResource ModernPasswordBox}" 
                                                 Margin="0,0,0,30"
                                                 Name="txtPasswordConfirmed"/>

                                    <Button Content="ĐẶT LẠI MẬT KHẨU" 
                                             Style="{StaticResource PrimaryButton}"
                                             Margin="0,0,0,20"
                                             Command="{Binding ResetPasswordCommand}"/>

                                    <Button Content="Quay lại đăng nhập" 
                                             Style="{StaticResource SecondaryButton}"
                                             Command="{Binding BackToLoginCommand}"/>
                                </StackPanel>
                                
                            </Grid>

                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
