<Window x:Class="Hotel_Booking_System.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Booking_System.Views"
        mc:Ignorable="d"
        Title="Quên Mật Khẩu - Hotel Booking"
        Height="700" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2E7D8C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1E5A66"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF8F8F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FFF5F5F5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="#FFE0E0E0" 
                                BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF2E7D8C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

 

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#FF2E7D8C" Height="120">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="←" 
                        Width="30" Height="30" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="18" 
                        Margin="15,10,0,0"
                        VerticalAlignment="Top"
                        Cursor="Hand"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="HOTEL BOOKING" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Khôi phục mật khẩu" 
                               FontSize="14" 
                               Foreground="#FFB8D4D9" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="2" 
                        Content="✕" 
                        Width="30" Height="30" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16" 
                        Margin="0,10,15,0"
                        VerticalAlignment="Top"
                        Cursor="Hand"/>
            </Grid>


        <StackPanel Grid.Row="1" Margin="40,30" VerticalAlignment="Top">
            <Border Width="80" Height="80" 
                        Background="#FFF0F8FF" 
                        CornerRadius="40" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                    <TextBlock Text="🔑" 
                               FontSize="40" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Quên Mật Khẩu" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#FF333333" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,15"/>

                <TextBlock Text="Nhập email của bạn để nhận link đặt lại mật khẩu" 
                           FontSize="14" 
                           Foreground="#FF666666" 
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,30"/>


                <TextBlock Text="Email" 
                           FontSize="14" 
                           Foreground="#FF666666" 
                           Margin="0,0,0,8"/>
                <TextBox Style="{StaticResource ModernTextBox}" 
                         Name="EmailTextBox"
                         Text="example@email.com"/>


                <Button Content="GỬI LINK KHÔI PHỤC" 
                        Style="{StaticResource ModernButton}" 
                        Margin="0,30,0,0" 
                        Name="SendButton"/>

                <Button Content="Quay lại đăng nhập" 
                        Style="{StaticResource SecondaryButton}" 
                        Margin="0,15,0,0" 
                        Name="BackButton"/>


                <TextBlock HorizontalAlignment="Center" 
                           Margin="0,25,0,0"
                           FontSize="12"
                           Foreground="#FF999999"
                           TextAlignment="Center">
                    <TextBlock.Inlines>
                        <Run Text="Bạn sẽ nhận được email hướng dẫn"/>
                        <LineBreak/>
                        <Run Text="đặt lại mật khẩu trong vòng 5 phút"/>
                    </TextBlock.Inlines>
                </TextBlock>
            </StackPanel>
        </Grid>
</Window>
