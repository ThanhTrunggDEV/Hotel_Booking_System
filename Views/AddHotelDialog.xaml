<Window x:Class="Hotel_Booking_System.Views.AddHotelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Hotel"
        Height="470"
        Width="520"
        MinHeight="420"
        MinWidth="460"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FB">
    <Border Margin="20"
            Padding="20"
            Background="White"
            CornerRadius="12"
            BorderBrush="#DCE3F0"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0 0 0 20">
                <TextBlock Text="Create a new hotel"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50" />
                <TextBlock Text="Provide the basic information about the hotel below."
                           Margin="0 6 0 0"
                           Foreground="#607089" />
            </StackPanel>

            <Grid Grid.Row="1"
                  Margin="0 0 0 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Hotel Name" VerticalAlignment="Center" Margin="0 0 15 10" Foreground="#2C3E50" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding HotelName}" Margin="0 0 0 10" Padding="10 6" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Address" VerticalAlignment="Center" Margin="0 0 15 10" Foreground="#2C3E50" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Address}" Margin="0 0 0 10" Padding="10 6" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="City" VerticalAlignment="Center" Margin="0 0 15 10" Foreground="#2C3E50" />
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding City}" Margin="0 0 0 10" Padding="10 6" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Description" VerticalAlignment="Top" Margin="0 0 15 10" Foreground="#2C3E50" />
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Description}" Margin="0 0 0 10" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Padding="10 6" VerticalScrollBarVisibility="Auto" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Rating" VerticalAlignment="Center" Margin="0 0 15 0" Foreground="#2C3E50" />
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox Width="80" Text="{Binding Rating}" Padding="10 6" HorizontalContentAlignment="Center" Margin="0 0 12 0" />
                    <TextBlock Text="Enter a value from 1 to 5" Foreground="#607089" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" Content="Cancel" Width="110" Padding="10 6" Background="#EFF2F8" Foreground="#2C3E50" BorderBrush="#D0D9E6" Click="Cancel_Click" Margin="0 0 10 0" />
                <Button x:Name="btnSave" Content="Save" Width="110" Padding="10 6" Background="#2F80ED" Foreground="White" BorderBrush="#2F80ED" Click="Save_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
