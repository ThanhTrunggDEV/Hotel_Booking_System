<Window x:Class="Hotel_Booking_System.Views.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Room"
        Height="520" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="20"
            Background="White"
            Padding="20"
            SnapsToDevicePixels="True"
            >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Booking Information"
                       FontSize="18" FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" Margin="0,5">
                <TextBlock Text="Hotel Name" FontSize="12" Foreground="#7F8C8D"/>
                <TextBlock Text="{Binding Hotel.HotelName}" 
                           FontSize="14" FontWeight="Bold" 
                           Foreground="#2C3E50"/>
            </StackPanel>

        
            <StackPanel Grid.Row="2" Margin="0,5">
                <TextBlock Text="Customer Name" FontSize="12" Foreground="#7F8C8D"/>
                <TextBox Text="{Binding CurrentUser.FullName}" 
                         Height="32" BorderBrush="#BDC3C7" BorderThickness="1"
                         Padding="8"/>
            </StackPanel>


            <StackPanel Grid.Row="3" Margin="0,5">
                <TextBlock Text="Room Number" FontSize="12" Foreground="#7F8C8D"/>
                <TextBlock Text="{Binding SelectedRoom.RoomNumber}" 
                           FontSize="14" FontWeight="SemiBold" 
                           Foreground="#2C3E50"/>
            </StackPanel>


            <StackPanel Grid.Row="4" Margin="0,5">
                <TextBlock Text="Check-in Date" FontSize="12" Foreground="#7F8C8D"/>
                <DatePicker SelectedDate="{Binding CheckInDate, UpdateSourceTrigger=PropertyChanged}"
                            Height="32" BorderBrush="#BDC3C7" BorderThickness="1"/>
            </StackPanel>


            <StackPanel Grid.Row="5" Margin="0,5">
                <TextBlock Text="Check-out Date" FontSize="12" Foreground="#7F8C8D"/>
                <DatePicker SelectedDate="{Binding CheckOutDate, UpdateSourceTrigger=PropertyChanged}"
                            Height="32" BorderBrush="#BDC3C7" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="0,5">
                <TextBlock Text="Guests" FontSize="12" Foreground="#7F8C8D"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding NumberOfGuests}" Width="27"
                             MaxLength="2"
                             
                             Height="32" Padding="6"
                             BorderThickness="1" BorderBrush="{Binding GuestsBorderBrush}"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                            />
                    <TextBlock Text="{Binding SelectedRoom.Capacity, StringFormat=/ {0}}" 
                               VerticalAlignment="Center" Margin="5,0,0,0"
                               FontSize="14" Foreground="#2C3E50"/>
                </StackPanel>
            </StackPanel>

         
            <StackPanel Grid.Row="7" Margin="0,15,0,0">
                <TextBlock Text="Total Payment" FontSize="12" Foreground="#7F8C8D"/>
                <TextBlock Text="{Binding TotalPayment, StringFormat='${0:F0}'}"
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#27AE60"/>
            </StackPanel>

      
            <StackPanel Grid.Row="8" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Width="90" Height="36"
                        x:Name="btnCancel"
                        Background="#ECF0F1" Foreground="#2C3E50"
                        BorderBrush="{x:Null}" 
                        
                        Margin="0,0,10,0"
                       />
                <Button Content="Book Now" Width="100" Height="36"
                        Command="{Binding ConfirmBookingCommand}"
                        x:Name="btnBook"
                        Background="#27AE60" Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="{x:Null}" 
                       />
            </StackPanel>
        </Grid>
    </Border>
</Window>
