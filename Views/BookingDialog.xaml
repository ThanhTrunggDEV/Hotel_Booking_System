<Window x:Class="Hotel_Booking_System.Views.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Đặt Phòng"
        Height="800" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="24"
            Background="White"
            Padding="0"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="35" ShadowDepth="0" Color="#40000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="24,24,0,0" Height="110">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF1976D2" Offset="0"/>
                        <GradientStop Color="#FF42A5F5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid Margin="30,0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="30" Margin="0,0,12,0" Foreground="White"/>
                        <StackPanel>
                            <TextBlock Text="Đặt phòng của bạn" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Hoàn tất thông tin bên dưới để xác nhận đặt phòng." FontSize="12" Foreground="#E3F2FD"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#33FFFFFF" Padding="12,6" CornerRadius="18">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Khách sạn" Foreground="#E3F2FD" FontSize="12" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Hotel.HotelName}" FontSize="14" FontWeight="SemiBold" Foreground="White" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#F3F7FB" CornerRadius="18" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Tóm tắt đặt phòng" FontSize="14" FontWeight="Bold" Foreground="#1F3C88"/>
                        <Separator Margin="0,12,0,16" Background="#D6E4FF" Height="1"/>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Phòng" FontSize="12" Foreground="#607D8B"/>
                            <TextBlock Text="{Binding SelectedRoom.RoomNumber, StringFormat=Phòng {0}}" FontSize="16" FontWeight="SemiBold" Foreground="#1F3C88"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Sức chứa" FontSize="12" Foreground="#607D8B"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#1F3C88" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding SelectedRoom.Capacity, StringFormat={}{0} khách}" FontSize="14" Foreground="#1F3C88"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Tổng thanh toán" FontSize="12" Foreground="#607D8B"/>
                            <TextBlock Text="{Binding TotalPayment, StringFormat='${0:F0}'}" FontSize="22" FontWeight="Bold" Foreground="#2E7D32"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="Tên khách" FontSize="12" Foreground="#607D8B" Margin="0,0,0,6"/>
                        <Border Background="#F8FAFC" CornerRadius="10" BorderBrush="#D0D8E8" BorderThickness="1">
                            <Grid Margin="12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1F3C88" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding GuestName, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" Background="Transparent" Padding="0,8"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Ngày nhận phòng" FontSize="12" Foreground="#607D8B" Margin="0,0,0,6"/>
                            <Border Background="#F8FAFC" CornerRadius="10" BorderBrush="#D0D8E8" BorderThickness="1">
                                <Grid Margin="8,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1F3C88" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <DatePicker Grid.Column="1"
                                                SelectedDate="{Binding CheckInDate, UpdateSourceTrigger=PropertyChanged}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                DisplayDateStart="{x:Static sys:DateTime.Today}"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ngày trả phòng" FontSize="12" Foreground="#607D8B" Margin="0,0,0,6"/>
                            <Border Background="#F8FAFC" CornerRadius="10" BorderBrush="#D0D8E8" BorderThickness="1">
                                <Grid Margin="8,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1F3C88" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <DatePicker Grid.Column="1"
                                                SelectedDate="{Binding CheckOutDate, UpdateSourceTrigger=PropertyChanged}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                DisplayDateStart="{x:Static sys:DateTime.Today}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="2" Background="#F3F7FB" CornerRadius="12" Padding="14" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Các ngày đã được đặt" FontSize="12" FontWeight="SemiBold" Foreground="#1F3C88" Margin="0,0,0,8"/>
                            <ItemsControl ItemsSource="{Binding UpcomingBookedDates}">
                                <ItemsControl.Style>
                                    <Style TargetType="ItemsControl">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ItemsControl">
                                                    <ItemsPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="HasItems" Value="False">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ItemsControl">
                                                            <TextBlock Text="Không có đặt phòng sắp tới cho phòng này."
                                                                       Foreground="#607D8B"
                                                                       FontSize="12"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ItemsControl.Style>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFFFFF" CornerRadius="8" Padding="8" Margin="0,0,0,6" BorderBrush="#D0D8E8" BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1F3C88" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding}" Foreground="#1F3C88" FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="3" Margin="0,0,0,16">
                        <TextBlock Text="Số khách" FontSize="12" Foreground="#607D8B" Margin="0,0,0,6"/>
                        <Border Background="#F8FAFC" CornerRadius="10" BorderBrush="{Binding GuestsBorderBrush}" BorderThickness="1">
                            <Grid Margin="12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1F3C88" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Text="{Binding NumberOfGuests}" Width="40" MaxLength="2" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,8"/>
                                <TextBlock Grid.Column="2" Text="{Binding SelectedRoom.Capacity, StringFormat=/ {0}}" VerticalAlignment="Center" Foreground="#90A4AE"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Border Grid.Row="4" Background="#E8F5E9" BorderBrush="#C8E6C9" BorderThickness="1" CornerRadius="12" Padding="14" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="22" Foreground="#2E7D32" Margin="0,0,10,0"/>
                            <StackPanel>
                                <TextBlock Text="Thanh toán an toàn sẽ được thực hiện ở bước tiếp theo." FontSize="12" Foreground="#2E7D32"/>
                                <TextBlock Text="Bạn có thể xem lại chi tiết thanh toán trước khi xác nhận." FontSize="12" Foreground="#2E7D32" Opacity="0.8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="5" Visibility="{Binding NotificationVisibility}" Background="#FFEBEE" Margin="0,0,0,16" Padding="12" CornerRadius="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#C62828" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding NotificationMessage}" Foreground="#C62828" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <Separator Grid.Row="2" Margin="30,0" Background="#ECEFF1" Height="1"/>

            <StackPanel Grid.Row="3" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,20,30,30">
                <Button Content="Hủy" Width="110" Height="40"
                        x:Name="btnCancel"
                        Background="White"
                        Foreground="#455A64"
                        BorderBrush="#CFD8DC"
                        BorderThickness="1"
                        FontWeight="SemiBold"
                        Margin="0,0,12,0"/>
                <Button Content="Đặt ngay" Width="140" Height="40"
                        Command="{Binding ConfirmBookingCommand}"
                        x:Name="btnBook"
                        Background="#FF1976D2"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="{x:Null}"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#401976D2"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
