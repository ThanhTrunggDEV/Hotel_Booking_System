<Window x:Class="Hotel_Booking_System.Views.ReviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReviewDialog"
        Height="420"
        Width="460"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="24"
            Background="White"
            Padding="0"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="26" ShadowDepth="0" Opacity="0.28" Color="#1A1F4A"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{StaticResource PrimaryGradient}"
                    CornerRadius="24,24,0,0"
                    Padding="26">
                <StackPanel>
                    <TextBlock Text="Cảm ơn bạn đã lưu trú cùng chúng tôi"
                               Foreground="#B3FFFFFF"
                               FontSize="13"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                        <Border Width="42" Height="42" CornerRadius="21" Background="#33FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="&#xE19F;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Đánh giá kỳ nghỉ của bạn"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Hãy chia sẻ những điều bạn yêu thích để giúp các khách khác."
                                       Foreground="#E6FFFFFF"
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Margin="28">
                <StackPanel>
                    <TextBlock Text="Chọn số sao" FontSize="13" FontWeight="SemiBold" Foreground="#1F2D5C"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,18" VerticalAlignment="Center">
                        <Slider Minimum="1"
                                Maximum="5"
                                SmallChange="1"
                                LargeChange="1"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                Value="{Binding Rating, Mode=TwoWay}"
                                Width="220"
                                Margin="0,0,12,0"/>
                        <Border Background="#EEF2FF" CornerRadius="16" Padding="12,6" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE208;" FontFamily="Segoe MDL2 Assets" Foreground="#667EEA" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Rating}" FontWeight="Bold" Foreground="#1F2D5C"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Cảm nhận của bạn" FontSize="13" FontWeight="SemiBold" Foreground="#1F2D5C"/>
                    <Border Background="#F3F6FF" CornerRadius="18" Padding="16" Margin="0,10,0,0">
                        <TextBox Text="{Binding Comment}"
                                 AcceptsReturn="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="#1F2D5C"
                                 FontSize="13"
                                 Height="140"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Border>
                    <TextBlock Text="Những góp ý của bạn sẽ được gửi tới đội ngũ khách sạn."
                               Foreground="#6F7D99"
                               FontSize="11"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Mẹo nhỏ" FontSize="12" FontWeight="SemiBold" Foreground="#667EEA"/>
                    <TextBlock Text="Đừng quên đề cập đến dịch vụ, vị trí hoặc những điều có thể cải thiện."
                               Foreground="#6F7D99"
                               FontSize="11"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="2" CornerRadius="0,0,24,24" Padding="28" Background="#F8F9FF">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Đóng"
                            Width="130"
                            Height="44"
                            Margin="0,0,12,0"
                            x:Name="btnCancel"
                            Style="{StaticResource SecondaryButton}"/>
                    <Button Content="Gửi đánh giá"
                            Width="150"
                            Height="44"
                            x:Name="btnSubmit"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
