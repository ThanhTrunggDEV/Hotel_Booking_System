<Window x:Class="Hotel_Booking_System.Views.ModifyBookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modify Booking"
        Height="480" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border CornerRadius="24"
            Background="White"
            Padding="0"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.25" Color="#1A1F4A"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" CornerRadius="24,24,0,0" Padding="24">
                <StackPanel>
                    <TextBlock Text="Update your stay"
                               Foreground="#B3FFFFFF"
                               FontSize="13"/>
                    <TextBlock Text="Modify Booking"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,2,0,8"/>
                    <TextBlock Text="Adjust guest details and dates to keep things perfect."
                               Foreground="#E6FFFFFF"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Margin="28" >
                <StackPanel.Resources>
                    <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                        <Setter Property="Height" Value="48"/>
                        <Setter Property="Padding" Value="18,12"/>
                    </Style>
                </StackPanel.Resources>

                <TextBlock Text="Guest information" FontSize="13" FontWeight="SemiBold" Foreground="#1F2D5C"/>

                <StackPanel Margin="0,8,0,16">
                    <TextBlock Text="Customer name" FontSize="12" Foreground="#7A869A" Margin="4,0,0,4"/>
                    <TextBox Text="{Binding GuestName, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Number of guests" FontSize="12" Foreground="#7A869A" Margin="4,0,0,4"/>
                    <TextBox Text="{Binding NumberOfGuests, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <TextBlock Text="Stay dates" FontSize="13" FontWeight="SemiBold" Foreground="#1F2D5C"/>

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Check-in" FontSize="12" Foreground="#7A869A" Margin="4,0,0,4"/>
                        <Border Background="#F3F6FF" CornerRadius="16" Padding="12">
                            <DatePicker SelectedDate="{Binding CheckInDate}" BorderThickness="0" Background="Transparent"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Check-out" FontSize="12" Foreground="#7A869A" Margin="4,0,0,4"/>
                        <Border Background="#F3F6FF" CornerRadius="16" Padding="12">
                            <DatePicker SelectedDate="{Binding CheckOutDate}" BorderThickness="0" Background="Transparent"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border Background="#FFF5F5" BorderBrush="#FFE0E0" BorderThickness="1" CornerRadius="12" Padding="12" Margin="0,20,0,0"
                        Visibility="{Binding ElementName=txtNotification, Path=Visibility}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xEA39;" FontFamily="Segoe MDL2 Assets" Foreground="#D32F2F" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ElementName=txtNotification, Path=Text}" Foreground="#D32F2F" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <TextBlock x:Name="txtNotification" Text="" Foreground="#D32F2F" Visibility="Collapsed"/>
            </StackPanel>

            <DockPanel Grid.Row="2" Margin="28,0,28,28">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <Button Content="Cancel" Width="120" Height="44" Margin="0,0,12,0" x:Name="btnCancel"
                            Style="{StaticResource SecondaryButton}"/>
                    <Button Content="Save changes" Width="160" Height="44" x:Name="btnSave"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Border>
</Window>
