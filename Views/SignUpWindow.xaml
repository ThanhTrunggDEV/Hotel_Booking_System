<Window x:Class="Hotel_Booking_System.Views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Booking_System.Views"
        mc:Ignorable="d"
        Title="Đăng Ký - NTT Hotel"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent">

    <Grid>
        <Border Background="{StaticResource PrimaryGradient}">
            <Grid>
                <Grid>
                    <StackPanel VerticalAlignment="Top" 
                                HorizontalAlignment="Center" 
                                Margin="0,40,0,0">
                    </StackPanel>

                    <Border Width="500" 
                            Background="White" 
                            CornerRadius="25"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                            Direction="270" 
                                            ShadowDepth="20" 
                                            Opacity="0.3" 
                                            BlurRadius="40"/>
                        </Border.Effect>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="50,50,50,50">

                                <StackPanel x:Name="Step1Panel">
                                    <TextBlock Text="Tạo Tài Khoản" 
                                               FontSize="28" 
                                               FontWeight="Bold" 
                                               Foreground="#2C3E50" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,10"/>

                                    <TextBlock Text="Điền đầy đủ thông tin để tạo tài khoản"
                                               FontSize="15"
                                               Foreground="#7F8C8D"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,40"/>

                                    <TextBlock Text="{Binding NotificationMessage}"
                                               Foreground="Red"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,20"/>


                                    <TextBlock Text="Thông tin cá nhân" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center"
                                               FontWeight="SemiBold" 
                                               Foreground="#2C3E50" 
                                               Margin="0,0,0,20"/>

                                    <TextBlock Text="Họ và tên" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,20"
                                             Name="txtFullName"/>

                                    <TextBlock Text="Email" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Style="{StaticResource ModernTextBox}" 
                                                 Name="txtEmail"/>

                                        <Button Grid.Column="2"
                                                Content="Nhận mã" 
                                                Style="{StaticResource SecondaryButton}"
                                                Height="55"
                                                FontSize="13"
                                                Command="{Binding SendOTPCommand}"
                                                CommandParameter="{Binding ElementName=txtEmail, Path=Text}"
                                                Name="btnSendOTP">
                                            <Button.Triggers>
                                                <EventTrigger RoutedEvent="Button.Click" >
                                                    <BeginStoryboard>
                                                        <Storyboard>

                                                            <StringAnimationUsingKeyFrames Storyboard.TargetName="btnSendOTP"
                                                                                           Storyboard.TargetProperty="Content"
                                                                                           Duration="0:1:0">
                                                                <DiscreteStringKeyFrame Value="1" KeyTime="0:0:1"/>
                                                                <DiscreteStringKeyFrame Value="2" KeyTime="0:0:2"/>
                                                                <DiscreteStringKeyFrame Value="3" KeyTime="0:0:3"/>
                                                                <DiscreteStringKeyFrame Value="4" KeyTime="0:0:4"/>
                                                                <DiscreteStringKeyFrame Value="5" KeyTime="0:0:5"/>
                                                                <DiscreteStringKeyFrame Value="6" KeyTime="0:0:6"/>
                                                                <DiscreteStringKeyFrame Value="7" KeyTime="0:0:7"/>
                                                                <DiscreteStringKeyFrame Value="8" KeyTime="0:0:8"/>
                                                                <DiscreteStringKeyFrame Value="9" KeyTime="0:0:9"/>
                                                                <DiscreteStringKeyFrame Value="10" KeyTime="0:0:10"/>
                                                                <DiscreteStringKeyFrame Value="11" KeyTime="0:0:11"/>
                                                                <DiscreteStringKeyFrame Value="12" KeyTime="0:0:12"/>
                                                                <DiscreteStringKeyFrame Value="13" KeyTime="0:0:13"/>
                                                                <DiscreteStringKeyFrame Value="14" KeyTime="0:0:14"/>
                                                                <DiscreteStringKeyFrame Value="15" KeyTime="0:0:15"/>
                                                                <DiscreteStringKeyFrame Value="16" KeyTime="0:0:16"/>
                                                                <DiscreteStringKeyFrame Value="17" KeyTime="0:0:17"/>
                                                                <DiscreteStringKeyFrame Value="18" KeyTime="0:0:18"/>
                                                                <DiscreteStringKeyFrame Value="19" KeyTime="0:0:19"/>
                                                                <DiscreteStringKeyFrame Value="20" KeyTime="0:0:20"/>
                                                                <DiscreteStringKeyFrame Value="21" KeyTime="0:0:21"/>
                                                                <DiscreteStringKeyFrame Value="22" KeyTime="0:0:22"/>
                                                                <DiscreteStringKeyFrame Value="23" KeyTime="0:0:23"/>
                                                                <DiscreteStringKeyFrame Value="24" KeyTime="0:0:24"/>
                                                                <DiscreteStringKeyFrame Value="25" KeyTime="0:0:25"/>
                                                                <DiscreteStringKeyFrame Value="26" KeyTime="0:0:26"/>
                                                                <DiscreteStringKeyFrame Value="27" KeyTime="0:0:27"/>
                                                                <DiscreteStringKeyFrame Value="28" KeyTime="0:0:28"/>
                                                                <DiscreteStringKeyFrame Value="29" KeyTime="0:0:29"/>
                                                                <DiscreteStringKeyFrame Value="30" KeyTime="0:0:30"/>
                                                                <DiscreteStringKeyFrame Value="Nhận mã" KeyTime="0:0:32"/>

                                                            </StringAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Button.Triggers>
                                        </Button>
                                    </Grid>

                                    <TextBlock Text="Mã OTP" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,20,0,8"/>
                                    <TextBox Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,20"
                                             Name="txtOTP"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             TextAlignment="Center"
                                             MaxLength="6"/>

                                    <TextBlock Text="Số điện thoại" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,20"
                                             Name="txtPhone"/>

                                    <Grid Margin="0,20,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Ngày sinh" 
                                                       Foreground="#2C3E50" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,8"/>
                                            <DatePicker Style="{StaticResource ModernDatePicker}" 
                                                        Name="dtpDOB"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Giới tính" 
                                                       Foreground="#2C3E50" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,8"/>
                                            <ComboBox Style="{StaticResource ModernComboBox}" 
                                                      Name="cbbGender"
                                                      >
                                                <ComboBoxItem Content="Male"/>
                                                <ComboBoxItem Content="Female"/>
                                                <ComboBoxItem Content="Other"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>



                                    <TextBlock Text="Mật khẩu" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <PasswordBox Style="{StaticResource ModernPasswordBox}" 
                                                 Margin="0,0,0,20"
                                                 
                                                 Name="txtPassword"/>

                                    <TextBlock Text="Xác nhận mật khẩu" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <PasswordBox Style="{StaticResource ModernPasswordBox}" 
                                                 Margin="0,0,0,30"
                                                 Name="txtConfirmedPassword"/>


                                    <Button Content="TẠO TÀI KHOẢN" 
                                            Style="{StaticResource PrimaryButton}"
                                            Margin="0,0,0,30"
                                            Command="{Binding CreateAccountCommand}"
                                            >
                                        <Button.CommandParameter>
                                            <MultiBinding Converter="{StaticResource CreateAccountConverter}">
                                                <Binding ElementName="txtFullName" Path="Text"></Binding>
                                                <Binding ElementName="txtEmail" Path="Text"></Binding>
                                                <Binding ElementName="txtPhone" Path="Text"></Binding>
                                                <Binding ElementName="dtpDOB" Path="SelectedDate"></Binding>
                                                <Binding ElementName="cbbGender" Path="SelectedValue"></Binding>
                                                <Binding ElementName="txtOTP" Path="Text"></Binding>
                                                

                                            </MultiBinding>
                                        </Button.CommandParameter>
                                    </Button>

                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Đã có tài khoản? " 
                                                   Foreground="#7F8C8D" 
                                                   FontSize="13" 
                                                   VerticalAlignment="Center"/>
                                        <Button Content="Đăng nhập ngay" 
                                                Style="{StaticResource LinkButton}"
                                                Command="{Binding BackToLoginCommand}"
                                                Foreground="#667eea"
                                                FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
