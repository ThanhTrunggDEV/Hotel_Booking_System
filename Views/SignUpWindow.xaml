<Window x:Class="Hotel_Booking_System.Views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Booking_System.Views"
        mc:Ignorable="d"
        Title="Đăng Ký - NTT Hotel"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent">

    <Window.Resources>

        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f093fb" Offset="0"/>
            <GradientStop Color="#f5576c" Offset="1"/>
        </LinearGradientBrush>


        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="27.5"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="10" 
                                                        Opacity="0.5" 
                                                        BlurRadius="20"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="5" 
                                                        Opacity="0.3" 
                                                        BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#667eea"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#667eea"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#10667eea"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="5" 
                                                        Opacity="0.3" 
                                                        BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="27.5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="25,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="3" 
                                                        Opacity="0.2" 
                                                        BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="27.5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="25,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" 
                                                        Direction="270" 
                                                        ShadowDepth="3" 
                                                        Opacity="0.2" 
                                                        BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="BorderBrush" Value="#667eea"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="27.5"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="40"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1" 
                                                      Data="M7,10L12,15 17,10z" 
                                                      Fill="#667eea" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" 
                                              IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="25,0,40,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup Name="Popup" 
                                   Placement="Bottom" 
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True">
                                <Grid MinWidth="{TemplateBinding ActualWidth}" 
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="White" 
                                            BorderBrush="#E0E0E0" 
                                            BorderThickness="1"
                                            CornerRadius="15">
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="ToggleButton" Property="Background" Value="White"/>
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#667eea"/>
                                <Setter TargetName="ToggleButton" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter TargetName="ToggleButton" Property="Background" Value="#F8F9FA"/>
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="Transparent"/>
                                <Setter TargetName="ToggleButton" Property="BorderThickness" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="DisplayDateStart" Value="1900-01-01"/>
            <Setter Property="DisplayDateEnd" Value="2100-12-31"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="27.5"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <DatePickerTextBox Name="PART_TextBox" 
                                                       Grid.Column="0" 
                                                       Focusable="{TemplateBinding Focusable}"
                                                       HorizontalContentAlignment="Stretch"
                                                       VerticalContentAlignment="Center"
                                                       Margin="25,0,0,0"
                                                       Background="Transparent"
                                                       BorderThickness="0"/>
                                    <Button Name="PART_Button" 
                                            Grid.Column="1"
                                            Focusable="False"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Width="40"
                                            Height="40">
                                        <Path Data="M19,3H18V1H16V3H8V1H6V3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z" 
                                              Fill="#667eea" 
                                              Width="20" Height="20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Button>
                                </Grid>
                            </Border>
                            <Popup Name="PART_Popup" 
                                   Placement="Bottom" 
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True">
                                <Grid MinWidth="{TemplateBinding ActualWidth}" 
                                      MaxHeight="100">
                                    <Border Background="White" 
                                            BorderBrush="#E0E0E0" 
                                            BorderThickness="1"
                                            CornerRadius="15">
                                        <Calendar Name="PART_Calendar" 
                                                  Background="White"
                                                  BorderThickness="0"/>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="False">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#667eea"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#764ba2"/>
                                <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Width="22" Height="22" 
                                    Background="Transparent" 
                                    BorderBrush="#667eea" 
                                    BorderThickness="2" 
                                    CornerRadius="5">
                                <TextBlock x:Name="CheckMark" 
                                          Text="✓" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Foreground="#667eea"
                                          Visibility="Collapsed"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                              Margin="12,0,0,0" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#764ba2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource PrimaryGradient}">
            <Grid>
                <Grid>
                    <StackPanel VerticalAlignment="Top" 
                                HorizontalAlignment="Center" 
                                Margin="0,40,0,0">
                    </StackPanel>

                    <Border Width="500" 
                            Background="White" 
                            CornerRadius="25"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                            Direction="270" 
                                            ShadowDepth="20" 
                                            Opacity="0.3" 
                                            BlurRadius="40"/>
                        </Border.Effect>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="50,50,50,50">

                                <StackPanel x:Name="Step1Panel">
                                    <TextBlock Text="Tạo Tài Khoản" 
                                               FontSize="28" 
                                               FontWeight="Bold" 
                                               Foreground="#2C3E50" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,10"/>

                                    <TextBlock Text="Điền thông tin để bắt đầu hành trình" 
                                               FontSize="15" 
                                               Foreground="#7F8C8D" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,40"/>


                                    <TextBlock Text="Thông tin cá nhân" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center"
                                               FontWeight="SemiBold" 
                                               Foreground="#2C3E50" 
                                               Margin="0,0,0,20"/>

                                    <TextBlock Text="Họ và tên" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,20"
                                             Name="txtFullName"/>

                                    <TextBlock Text="Email" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Style="{StaticResource ModernTextBox}" 
                                                 Name="txtEmail"/>

                                        <Button Grid.Column="2"
                                                Content="Nhận mã" 
                                                Style="{StaticResource SecondaryButton}"
                                                Height="55"
                                                FontSize="13"
                                                Command="{Binding SendOTPCommand}"
                                                CommandParameter="{Binding ElementName=txtEmail, Path=Text}"
                                                Name="btnSendOTP">
                                            <Button.Triggers>
                                                <EventTrigger RoutedEvent="Button.Click" >
                                                    <BeginStoryboard>
                                                        <Storyboard>

                                                            <StringAnimationUsingKeyFrames Storyboard.TargetName="btnSendOTP"
                                                                                           Storyboard.TargetProperty="Content"
                                                                                           Duration="0:1:0">
                                                                <DiscreteStringKeyFrame Value="1" KeyTime="0:0:1"/>
                                                                <DiscreteStringKeyFrame Value="2" KeyTime="0:0:2"/>
                                                                <DiscreteStringKeyFrame Value="3" KeyTime="0:0:3"/>
                                                                <DiscreteStringKeyFrame Value="4" KeyTime="0:0:4"/>
                                                                <DiscreteStringKeyFrame Value="5" KeyTime="0:0:5"/>
                                                                <DiscreteStringKeyFrame Value="6" KeyTime="0:0:6"/>
                                                                <DiscreteStringKeyFrame Value="7" KeyTime="0:0:7"/>
                                                                <DiscreteStringKeyFrame Value="8" KeyTime="0:0:8"/>
                                                                <DiscreteStringKeyFrame Value="9" KeyTime="0:0:9"/>
                                                                <DiscreteStringKeyFrame Value="10" KeyTime="0:0:10"/>
                                                                <DiscreteStringKeyFrame Value="11" KeyTime="0:0:11"/>
                                                                <DiscreteStringKeyFrame Value="12" KeyTime="0:0:12"/>
                                                                <DiscreteStringKeyFrame Value="13" KeyTime="0:0:13"/>
                                                                <DiscreteStringKeyFrame Value="14" KeyTime="0:0:14"/>
                                                                <DiscreteStringKeyFrame Value="15" KeyTime="0:0:15"/>
                                                                <DiscreteStringKeyFrame Value="16" KeyTime="0:0:16"/>
                                                                <DiscreteStringKeyFrame Value="17" KeyTime="0:0:17"/>
                                                                <DiscreteStringKeyFrame Value="18" KeyTime="0:0:18"/>
                                                                <DiscreteStringKeyFrame Value="19" KeyTime="0:0:19"/>
                                                                <DiscreteStringKeyFrame Value="20" KeyTime="0:0:20"/>
                                                                <DiscreteStringKeyFrame Value="21" KeyTime="0:0:21"/>
                                                                <DiscreteStringKeyFrame Value="22" KeyTime="0:0:22"/>
                                                                <DiscreteStringKeyFrame Value="23" KeyTime="0:0:23"/>
                                                                <DiscreteStringKeyFrame Value="24" KeyTime="0:0:24"/>
                                                                <DiscreteStringKeyFrame Value="25" KeyTime="0:0:25"/>
                                                                <DiscreteStringKeyFrame Value="26" KeyTime="0:0:26"/>
                                                                <DiscreteStringKeyFrame Value="27" KeyTime="0:0:27"/>
                                                                <DiscreteStringKeyFrame Value="28" KeyTime="0:0:28"/>
                                                                <DiscreteStringKeyFrame Value="29" KeyTime="0:0:29"/>
                                                                <DiscreteStringKeyFrame Value="30" KeyTime="0:0:30"/>
                                                                <DiscreteStringKeyFrame Value="Nhận mã" KeyTime="0:0:32"/>

                                                            </StringAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Button.Triggers>
                                        </Button>
                                    </Grid>

                                    <TextBlock Text="Mã OTP" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,20,0,8"/>
                                    <TextBox Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,20"
                                             Name="txtOTP"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             TextAlignment="Center"
                                             MaxLength="6"/>

                                    <TextBlock Text="Số điện thoại" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <TextBox Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,20"
                                             Name="txtPhone"/>

                                    <Grid Margin="0,20,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Ngày sinh" 
                                                       Foreground="#2C3E50" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,8"/>
                                            <DatePicker Style="{StaticResource ModernDatePicker}" 
                                                        Name="dtpDOB"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Giới tính" 
                                                       Foreground="#2C3E50" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,8"/>
                                            <ComboBox Style="{StaticResource ModernComboBox}" 
                                                      Name="cbbGender"
                                                      >
                                                <ComboBoxItem Content="Nam"/>
                                                <ComboBoxItem Content="Nữ"/>
                                                <ComboBoxItem Content="Khác"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>



                                    <TextBlock Text="Mật khẩu" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <PasswordBox Style="{StaticResource ModernPasswordBox}" 
                                                 Margin="0,0,0,20"
                                                 
                                                 Name="txtPassword"/>

                                    <TextBlock Text="Xác nhận mật khẩu" 
                                               Foreground="#2C3E50" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"/>
                                    <PasswordBox Style="{StaticResource ModernPasswordBox}" 
                                                 Margin="0,0,0,30"
                                                 Name="txtConfirmedPassword"/>


                                    <Button Content="TẠO TÀI KHOẢN" 
                                            Style="{StaticResource PrimaryButton}"
                                            Margin="0,0,0,30"
                                            Command="{Binding CreateAccountCommand}"
                                            >
                                        <Button.CommandParameter>
                                            <MultiBinding Converter="{StaticResource CreateAccountConverter}">
                                                <Binding ElementName="txtFullName" Path="Text"></Binding>
                                                <Binding ElementName="txtEmail" Path="Text"></Binding>
                                                <Binding ElementName="txtPhone" Path="Text"></Binding>
                                                <Binding ElementName="dtpDOB" Path="SelectedDate"></Binding>
                                                <Binding ElementName="cbbGender" Path="SelectedValue"></Binding>
                                                <Binding ElementName="txtOTP" Path="Text"></Binding>
                                                

                                            </MultiBinding>
                                        </Button.CommandParameter>
                                    </Button>

                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Đã có tài khoản? " 
                                                   Foreground="#7F8C8D" 
                                                   FontSize="13" 
                                                   VerticalAlignment="Center"/>
                                        <Button Content="Đăng nhập ngay" 
                                                Style="{StaticResource LinkButton}"
                                                Command="{Binding BackToLoginCommand}"
                                                Foreground="#667eea"
                                                FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
