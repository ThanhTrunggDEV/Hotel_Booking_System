<Window x:Class="Hotel_Booking_System.Views.EditUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User"
        Height="520"
        Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF3F4F6">
    <Grid Margin="30">
        <Border Style="{StaticResource CardStyle}"
                Padding="0"
                Background="White"
                CornerRadius="22"
                BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{StaticResource PrimaryGradient}"
                        CornerRadius="22,22,0,0">
                    <Grid Margin="30,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="72"
                                Height="72"
                                CornerRadius="36"
                                Background="#FFFFFF22"
                                VerticalAlignment="Center">
                            <Viewbox Stretch="Uniform" Margin="12">
                                <TextBlock Text="👤"/>
                            </Viewbox>
                        </Border>

                        <StackPanel Grid.Column="1"
                                    Margin="24,0,0,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Chỉnh sửa người dùng"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Cập nhật thông tin tài khoản và quản lý quyền truy cập cho hệ thống."
                                       Margin="0,8,0,0"
                                       Foreground="#E8EDFF"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1"
                              Margin="30"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border Background="#F7F9FC"
                                CornerRadius="18"
                                Padding="24"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Thông tin cá nhân"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,20"/>

                                <Grid Margin="0,0,0,18">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0"
                                                Margin="0,0,12,0">
                                        <TextBlock Text="Họ và tên"
                                                   FontWeight="SemiBold"
                                                   Foreground="#5B6C84"
                                                   Margin="0,0,0,6"/>
                                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Số điện thoại"
                                                   FontWeight="SemiBold"
                                                   Foreground="#5B6C84"
                                                   Margin="0,0,0,6"/>
                                        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,0,0,18">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0"
                                                Margin="0,0,12,0">
                                        <TextBlock Text="Giới tính"
                                                   FontWeight="SemiBold"
                                                   Foreground="#5B6C84"
                                                   Margin="0,0,0,6"/>
                                        <ComboBox SelectedValue="{Binding Gender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectedValuePath="Content"
                                                  Height="55"
                                                  Padding="20,0"
                                                  Background="#F8F9FA"
                                                  BorderThickness="0"
                                                  Foreground="#495057">
                                            <ComboBoxItem Content="Male"/>
                                            <ComboBoxItem Content="Female"/>
                                            <ComboBoxItem Content="Other"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Ngày sinh"
                                                   FontWeight="SemiBold"
                                                   Foreground="#5B6C84"
                                                   Margin="0,0,0,6"/>
                                        <DatePicker SelectedDate="{Binding DateOfBirth, Mode=TwoWay}"
                                                    Height="55"
                                                    Background="#F8F9FA"
                                                    BorderThickness="0"
                                                    Padding="20,0"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="Email"
                                               FontWeight="SemiBold"
                                               Foreground="#5B6C84"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding Email}"
                                             Style="{StaticResource ModernTextBox}"
                                             IsReadOnly="True"
                                             Background="#E9EFF8"
                                             Foreground="#4A5568"/>
                                    <TextBlock Text="Email được sử dụng làm tên đăng nhập và không thể thay đổi."
                                               Foreground="#7B8BA3"
                                               Margin="0,8,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="Vai trò hệ thống"
                                               FontWeight="SemiBold"
                                               Foreground="#5B6C84"
                                               Margin="0,0,0,6"/>
                                    <ComboBox SelectedValue="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValuePath="Content"
                                              Height="55"
                                              Padding="20,0"
                                              Background="#F8F9FA"
                                              BorderThickness="0"
                                              Foreground="#495057">
                                        <ComboBoxItem Content="Customer"/>
                                        <ComboBoxItem Content="HotelAdmin"/>
                                        <ComboBoxItem Content="SuperAdmin"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="#FFFDF5F5"
                                BorderBrush="#FFE57373"
                                BorderThickness="1"
                                CornerRadius="18"
                                Padding="24">
                            <StackPanel>
                                <TextBlock Text="Xóa người dùng"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#C62828"/>
                                <TextBlock Text="Thao tác này sẽ loại bỏ tài khoản khỏi hệ thống và không thể hoàn tác."
                                           Margin="0,10,0,0"
                                           Foreground="#8D6E63"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <Grid Grid.Row="2"
                      Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Xóa người dùng"
                            Click="Delete_Click"
                            Background="#FFE53935"
                            Foreground="White"
                            Padding="24,12"
                            FontWeight="SemiBold"
                            BorderBrush="#FFE53935"
                            Cursor="Hand"
                            MinWidth="160"/>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button x:Name="btnCancel"
                                Content="Hủy"
                                Width="120"
                                Height="44"
                                Click="Cancel_Click"
                                Background="#EEF2F7"
                                Foreground="#475569"
                                BorderBrush="Transparent"
                                Cursor="Hand"
                                Margin="0,0,12,0"/>
                        <Button x:Name="btnSave"
                                Content="Lưu thay đổi"
                                Width="150"
                                Height="44"
                                Click="Save_Click"
                                Background="{StaticResource PrimaryGradient}"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Cursor="Hand"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
